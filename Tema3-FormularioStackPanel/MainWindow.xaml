<Window x:Class="Tema3_FormularioStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_FormularioStackPanel"
        mc:Ignorable="d"
        Title="Formulario" Height="350" Width="800" MinWidth="300" MinHeight="325" Icon="/form_icon-icons.com_70132.ico">
    <StackPanel>
        <StackPanel Margin="10">
            <Panel.Background>
                <LinearGradientBrush>
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0.0" Color="ForestGreen" />
                        <GradientStop Offset="1.0" Color="White" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Panel.Background>
            <TextBlock Margin="5,5,5,5" TextWrapping="Wrap" Text="Nombre" FontSize="16" FontWeight="Bold"/>
            <TextBox Margin="5,2,2,10"/>
        </StackPanel>
        <StackPanel Margin="10">
            <Panel.Background>
                <LinearGradientBrush>
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0.0" Color="#FF3CAAC7" />
                        <GradientStop Offset="1.0" Color="White" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Panel.Background>
            <TextBlock Margin="5,5,5,5" Text="Dirección" FontSize="16" FontWeight="Bold"></TextBlock>
            <TextBox Margin="5,2,2,10"/>
        </StackPanel>
        <StackPanel Margin="10">
            <Panel.Background>
                <LinearGradientBrush>
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0.3" Color="#FFFF46BD" />
                        <GradientStop Offset="1.0" Color="White" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Panel.Background>
            <TextBlock Margin="5,5,5,5" Text="Correo electrónico" FontSize="16" FontWeight="Bold"/>
            <TextBox Margin="5,2,2,10"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="5">
            <Button Content="Aceptar" Width="100" Margin="5"/>
            <Button Content="Cancelar" Width="100" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
